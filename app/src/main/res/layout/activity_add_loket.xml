<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ed_ttd"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_jagad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Jagad"
        android:textColor="#FF7629"
        android:textSize="36sp"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="367dp"
        android:layout_height="497dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.718"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/ed_nmPenerima"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="52dp"
                android:background="@drawable/roundedcorner"
                android:ems="10"
                android:hint="Nama"
                android:inputType="number"
                android:paddingLeft="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_jagad" />

            <EditText
                android:id="@+id/ed_almtAsal"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:background="@drawable/roundedcorner"
                android:ems="10"
                android:hint="Alamat Asal"
                android:inputType="textMultiLine"
                android:paddingLeft="15dp"
                app:layout_constraintEnd_toEndOf="@+id/ed_nmPenerima"
                app:layout_constraintStart_toStartOf="@+id/ed_nmPenerima"
                app:layout_constraintTop_toBottomOf="@+id/ed_nmPenerima" />

            <EditText
                android:id="@+id/ed_kecAsal"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:background="@drawable/roundedcorner"
                android:ems="10"
                android:hint="Kecamatan Asal"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                app:layout_constraintEnd_toEndOf="@+id/ed_nmPenerima"
                app:layout_constraintStart_toStartOf="@+id/ed_nmPenerima"
                app:layout_constraintTop_toBottomOf="@+id/ed_nmPenerima" />

            <EditText
                android:id="@+id/ed_kabAsal"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:background="@drawable/roundedcorner"
                android:ems="10"
                android:hint="Kabupaten Asal"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                app:layout_constraintEnd_toEndOf="@+id/ed_nmPenerima"
                app:layout_constraintStart_toStartOf="@+id/ed_nmPenerima"
                app:layout_constraintTop_toBottomOf="@+id/ed_nmPenerima" />

            <EditText
                android:id="@+id/ed_provAsal"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:background="@drawable/roundedcorner"
                android:ems="10"
                android:hint="Provinsi Asal"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                app:layout_constraintEnd_toEndOf="@+id/ed_nmPenerima"
                app:layout_constraintStart_toStartOf="@+id/ed_nmPenerima"
                app:layout_constraintTop_toBottomOf="@+id/ed_nmPenerima" />

            <EditText
                android:id="@+id/ed_kodePos"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:background="@drawable/roundedcorner"
                android:ems="10"
                android:hint="Kode Pos"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                app:layout_constraintEnd_toEndOf="@+id/ed_nmPenerima"
                app:layout_constraintStart_toStartOf="@+id/ed_nmPenerima"
                app:layout_constraintTop_toBottomOf="@+id/ed_nmPenerima" />

            <Button
                android:id="@+id/btn_simpan"
                android:layout_width="235dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:text="Simpan"
                app:layout_constraintEnd_toEndOf="@+id/scrollView2"
                app:layout_constraintHorizontal_bias="0.178"
                app:layout_constraintStart_toEndOf="@+id/btn_batal"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="685dp" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="430dp"
        android:layout_height="55dp"
        android:background="@drawable/background_putih"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/list" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/usernon" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>