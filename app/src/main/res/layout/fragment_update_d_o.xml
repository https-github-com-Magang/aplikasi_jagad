<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.HomeKurirFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_jagad2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Jagad"
                android:textColor="#FF7629"
                android:textSize="36sp" />


            <EditText
                android:id="@+id/ed_namaPengirim"
                android:layout_width="310dp"
                android:layout_height="45dp"
                android:layout_below="@+id/tv_jagad2"
                android:layout_marginStart="35dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/background_putih"
                android:ems="10"
                android:hint="Nama Peminjam"
                android:inputType="textPersonName" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="310dp"
                android:layout_height="45dp"
                android:layout_below="@+id/ed_namaPengirim"
                android:layout_alignStart="@+id/ed_namaPengirim"
                android:layout_alignEnd="@+id/ed_namaPengirim"
                android:layout_marginStart="0dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="0dp"
                android:entries="@array/status"
                android:padding="10dp"
                android:scrollbarSize="4dp"
                android:spinnerMode="dropdown"
                android:theme="@style/ThemeOverlay.MaterialComponents.Light" />


            <EditText
                android:id="@+id/ed_Keterangan"
                android:layout_width="310dp"
                android:layout_height="45dp"
                android:layout_below="@+id/spinner"
                android:layout_alignStart="@+id/spinner"
                android:layout_alignEnd="@+id/spinner"
                android:layout_marginStart="0dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/background_putih"
                android:ems="10"
                android:hint="Keterangan"
                android:inputType="datetime" />


            <EditText
                android:id="@+id/ed_ttd"
                android:layout_width="302dp"
                android:layout_height="104dp"
                android:layout_below="@+id/ed_Keterangan"
                android:layout_alignStart="@+id/ed_Keterangan"
                android:layout_alignEnd="@+id/ed_Keterangan"
                android:layout_marginStart="0dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/background_putih"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Signature"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="169dp"
                android:layout_height="62dp"
                android:layout_below="@+id/ed_ttd"
                android:layout_alignStart="@+id/ed_ttd"
                android:layout_alignEnd="@+id/ed_ttd"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="54dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="87dp"

                android:layout_marginBottom="243dp"
                android:background="@drawable/background_orange"
                android:text="Simpan" />


        </RelativeLayout>
    </RelativeLayout>
</layout>