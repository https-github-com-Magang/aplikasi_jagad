<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".admin.HomeAdminFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignTop="@+id/tv_jagad2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="45dp"
                android:src="@drawable/group" />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_no_adm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:fontFamily="@font/poppins"
                        android:text="023108421048"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_nama_adm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:fontFamily="@font/poppins"
                        android:text="Nuril Febri S"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="112dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/background_putih"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_totkurir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="Total Kurir"
                        android:textColor="@color/abu"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_totalkurir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="@color/abu"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="152dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_totsewa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="Total Sewa"
                        android:textColor="@color/abu"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_totalsewa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="@color/abu"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_totloket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="Total Loket"
                        android:textColor="@color/abu"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_totalloket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="@color/abu"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_posisikurir"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="45dp"
                android:background="#F4F4F4"
                android:shadowColor="@color/black"
                android:text="Lihat Posisi Kurir"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_sewa"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="45dp"
                android:background="#F4F4F4"
                android:shadowColor="@color/black"
                android:text="Sewa Kendaraan"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_laporan"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_below="@+id/btn_sewa"
                android:layout_alignEnd="@+id/btn_sewa"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="0dp"
                android:background="#F4F4F4"
                android:shadowColor="@color/black"
                android:text="Rekap Seluruh Data"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_loket"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_below="@+id/btn_posisikurir"
                android:layout_alignStart="@+id/btn_posisikurir"
                android:layout_marginTop="45dp"
                android:background="#F4F4F4"
                android:shadowColor="@color/black"
                android:text="Buat Order Baru"
                android:textSize="14sp" />

        </RelativeLayout>
    </RelativeLayout>
</layout>