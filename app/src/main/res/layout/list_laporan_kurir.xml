<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="40dp"
    android:layout_marginBottom="10dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/background_putih">

        <TextView
            android:id="@+id/tv_totalloket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="1"
            android:text="Kode Pengiriman"
            android:textColor="@android:color/holo_orange_dark"
            android:textColorHint="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pengirim"
            android:layout_alignStart="@+id/tv_pengirim"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins"
            android:hint="Nuril Febri"
            android:maxLines="1"
            android:text="Nuril Febri"
            android:textColorHint="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_pengirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_totalloket"
            android:layout_alignStart="@+id/tv_totalloket"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins"
            android:hint="Pengirim :"
            android:maxLines="1"
            android:text="Pengirim"
            android:textColorHint="@color/black"
            android:textSize="14sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>