<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="107dp"
    android:elevation="16dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_putih">


        <TextView
            android:id="@+id/tv_nokode"
            android:layout_width="39dp"
            android:layout_height="55dp"
            android:layout_alignTop="@+id/tv_kodekirim"
            android:layout_marginStart="118dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/tv_kodekirim"
            android:fontFamily="@font/poppins_semibold"
            android:hint="001"
            android:maxLines="1"
            android:textColorHint="@color/btn"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_pengirim"
            android:layout_marginStart="14dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/tv_pengirim"
            android:fontFamily="@font/poppins"
            android:hint="Nuril Febri"
            android:maxLines="1"
            android:textColorHint="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_kodekirim"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:hint="Kode Pengiriman"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_pengirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_kodekirim"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins"
            android:hint="Pengirim :"
            android:maxLines="1"
            android:textColorHint="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pengirim"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/poppins"
            android:hint="18 Januari 2020"
            android:maxLines="1"
            android:textColor="@color/btn"
            android:textColorHint="@color/btn"
            android:textSize="12sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>