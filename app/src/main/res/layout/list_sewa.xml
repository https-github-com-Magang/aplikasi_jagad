<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:clickable="true"
    android:elevation="50dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_putih">


        <TextView
            android:id="@+id/tv_namaPeminjam"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="1"
            android:text="Nama Peminjam :"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_noKTPem"
            android:layout_marginStart="82dp"
            android:layout_marginTop="-3dp"
            android:layout_toEndOf="@+id/tv_noKTPem"
            android:fontFamily="@font/poppins"
            android:maxLines="1"
            android:textColorHint="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_noKTPem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_namaPeminjam"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins"
            android:maxLines="1"
            android:text="No KTP Peminjam :"
            android:textColorHint="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_noKTPem"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/poppins"
            android:hint="18 Januari 2020"
            android:maxLines="1"
            android:text="18 Januari 2020"
            android:textColor="@color/btn"
            android:textColorHint="@color/btn"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_namaP"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_namaPeminjam"
            android:layout_marginStart="0dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/tv_namaPeminjam"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="1"
            android:textColor="#FF5722"
            android:textColorHint="@color/btn"
            android:textSize="16sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>