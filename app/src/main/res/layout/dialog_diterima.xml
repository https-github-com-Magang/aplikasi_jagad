<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ed_penerima"
        android:layout_width="304dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Penerima"
        android:background="@drawable/roundedcorner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_bukti"
        android:layout_width="304dp"
        android:layout_height="114dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedcorner"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Bukti Penerimaan Barang"
        android:inputType="textMultiLine"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/ed_penerima"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed_penerima"
        app:layout_constraintTop_toBottomOf="@+id/ed_penerima" />

