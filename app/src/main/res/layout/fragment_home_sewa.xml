<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.HomeSewaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_jagad2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Jagad"
            android:textColor="#FF7629"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_sewaa"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_below="@+id/tv_jagad2"
            android:layout_alignStart="@+id/tv_jagad2"
            android:layout_marginStart="28dp"
            android:layout_marginTop="84dp"
            android:background="@drawable/background_putih"
            android:shadowColor="@color/btn"
            android:text="Sewa"
            android:textColor="@color/btn"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_kendaraan"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_alignTop="@+id/btn_sewaa"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="63dp"
            android:background="@drawable/background_putih"
            android:shadowColor="@color/btn"
            android:text="Kendaraan"
            android:textColor="@color/btn"
            android:textSize="18sp" />

    </RelativeLayout>
</RelativeLayout>
</layout>