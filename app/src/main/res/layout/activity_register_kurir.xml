<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/kurir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Kurir"
        android:textColor="#FF7629"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/registerKurir"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/registerKurir"
        app:layout_constraintTop_toBottomOf="@+id/registerKurir" />

    <TextView
        android:id="@+id/registerKurir"
        android:layout_width="241dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Register"
        android:textColor="#FF7629"
        android:textSize="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_userKurir"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/roundedcorner"
        android:drawableLeft="@drawable/user"
        android:paddingLeft="10dp"
        android:ems="10"
        android:hint="Usernam"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.584"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/ed_emailKurir"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/roundedcorner"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/ed_userKurir"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="@+id/ed_userKurir"
        app:layout_constraintTop_toBottomOf="@+id/ed_userKurir" />

    <EditText
        android:id="@+id/ed_pasKurir"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/roundedcorner"
        android:drawableLeft="@drawable/password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/ed_emailKurir"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="@+id/ed_emailKurir"
        app:layout_constraintTop_toBottomOf="@+id/ed_emailKurir" />

    <Button
        android:id="@+id/btn_regKurir"
        android:layout_width="254dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="256dp"
        android:background="@drawable/background_orange"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ed_pasKurir"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed_pasKurir"
        app:layout_constraintTop_toBottomOf="@+id/ed_pasKurir"
        app:layout_constraintVertical_bias="0.333" />

    <Button
        android:id="@+id/btn_logKurir"
        android:layout_width="254dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_orange"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_regKurir"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_regKurir"
        app:layout_constraintTop_toBottomOf="@+id/btn_regKurir"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>