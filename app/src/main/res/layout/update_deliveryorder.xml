<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_jagad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Jagad"
        android:textColor="#FF7629"
        android:textSize="36sp"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_nmPenerima"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:paddingLeft="15dp"
        android:background="@drawable/roundedcorner"
        android:ems="10"
        android:hint="No Pengirim"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_jagad" />

    <EditText
        android:id="@+id/ed_almtPenerima"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:paddingLeft="15dp"
        android:background="@drawable/roundedcorner"
        android:ems="10"
        android:hint="Nama Penerima"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/ed_nmPenerima"
        app:layout_constraintStart_toStartOf="@+id/ed_nmPenerima"
        app:layout_constraintTop_toBottomOf="@+id/ed_nmPenerima" />

    <MultiAutoCompleteTextView
        android:id="@+id/st_penerimaan"
        android:layout_width="301dp"
        android:layout_height="58dp"
        android:background="@drawable/roundedcorner"
        android:hint="Status Penerimaan"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/ed_almtPenerima"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed_almtPenerima"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="314dp" />

    <EditText
        android:id="@+id/ed_ket"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:ems="10"
        android:paddingLeft="15dp"
        android:gravity="start|top"
        android:hint="Keterangan"
        android:inputType="textMultiLine"
        android:background="@drawable/roundedcorner"
        app:layout_constraintEnd_toEndOf="@+id/ed_almtPenerima"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/st_penerimaan"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="392dp" />

    <EditText
        android:id="@+id/ed_ttd"
        android:layout_width="261dp"
        android:layout_height="108dp"
        android:layout_marginBottom="152dp"
        android:background="@drawable/roundedcorner"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Signature"
        android:inputType="textMultiLine"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ed_ket"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed_ket" />

    <Button
        android:id="@+id/btn_smp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:text="Simpan"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="@+id/ed_ttd"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="598dp" />

    <LinearLayout
        android:layout_width="430dp"
        android:layout_height="55dp"
        android:background="@drawable/background_putih"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/homeicon" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/list" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/usernon" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>